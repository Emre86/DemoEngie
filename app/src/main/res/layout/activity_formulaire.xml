<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="homesweethome.emre.demoengie.FormulaireActivity">

    <TextView
        android:id="@+id/textViewFormulaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:text="@string/enter_name_email"
        />

    <Button
        android:id="@+id/buttonFormulaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextFormulaireMail"
        android:layout_marginTop="130dp"
        android:text="@string/create_account" />

    <EditText
        android:id="@+id/edittextFormulaireName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonFormulaire"
        android:layout_below="@+id/textViewFormulaire"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:text=""
        android:inputType="text" />

    <EditText
        android:id="@+id/edittextFormulaireMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonFormulaire"
        android:layout_below="@+id/edittextFormulaireName"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:text=""
        android:inputType="text" />










</RelativeLayout>
